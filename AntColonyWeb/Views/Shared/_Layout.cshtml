<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="~/Styles/main.css" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" type="text/css" />
</head>
<body style="font-family: system-ui; font-size: medium; background-color: #53afed; ">

    <div id="menu" class="row" style="padding: 20px; width: 90%; margin: auto; ">
        <div class="col-sm-3" style="text-align: center;">
            @*<button class="btn-1" style="color:white;">@Html.ActionLink("Main", "Index", "Home")</button>*@
            <input class="btn-1" type="button" name="Home" runat="server" value="Home" onclick="router('Index')" />
        </div>
        <div class="col-sm-3" style="text-align: center;">
            @*<button class="btn-1" style="color:white">@Html.ActionLink("Get distances", "GetHtml", "Home")</button>*@
            <input class="btn-1" type="button" name="GetHtml" runat="server" value="GetHtml" onclick="router('GetHtml')" />
        </div>
        <div class="col-sm-3" style="text-align: center;">
            @*<button class="btn-1" style="color:white">@Html.ActionLink("Get all cities", "GetCities", "Home")</button>*@
            <input class="btn-1" type="button" name="GetCities" runat="server" value="GetCities" onclick="router('GetCities')" />
        </div>
    </div>

    <div style="background-color: white; padding: 20px; width: 90%; margin: auto; border-radius: 10px;">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
        </html>

<script>
    function router(route) {
        window.location.href = "/Home/" + route;
    }
</script>
